platform :ios, '9.0'

# ignore all warnings from all pods
inhibit_all_warnings!

use_frameworks!

def allPods
    ### Core
    pod 'RxSwift'
    pod 'RxCocoa'
    pod 'ObjectMapper'
    pod 'Moya'
    pod 'Moya/RxSwift'
    pod 'RxDataSources', '~> 3.0'
    
    ### Layout engine
    pod 'SnapKit', '~> 4.0.0'

end

target 'Countries' do
    allPods
end
